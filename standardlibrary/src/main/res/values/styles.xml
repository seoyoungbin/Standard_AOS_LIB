<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/popup_open</item>
        <item name="android:windowExitAnimation">@anim/popup_close</item>
